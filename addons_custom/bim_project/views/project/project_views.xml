<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View (Unchanged) -->
    <record id="view_bim_project_tree" model="ir.ui.view">
        <field name="name">bim.project.tree</field>
        <field name="model">bim.project</field>
        <field name="arch" type="xml">
            <tree string="BIM Projects">
                <field name="create_date"/>
                <field name="name"/>
                <field name="project_code"/>
                <field name="status"/>
                <field name="progress" widget="progressbar" options="{'max_value': 100}"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <!-- Form View (Updated with Improved Approval Layout) -->
    <record id="view_bim_project_form" model="ir.ui.view">
        <field name="name">bim.project.form</field>
        <field name="model">bim.project</field>
        <field name="arch" type="xml">
            <form string="BIM Project">
                <header>
                    <!-- Status buttons -->
                    <button name="action_set_active" type="object" string="Activate"
                            attrs="{'invisible': [('status', '!=', 'draft')]}" class="btn-primary"/>
                    <button name="action_set_completed" type="object" string="Complete"
                            attrs="{'invisible': [('status', '!=', 'active')]}" class="btn-success"/>
                    <button name="action_set_archived" type="object" string="Archive"
                            attrs="{'invisible': [('status', '!=', 'completed')]}" class="btn-default"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,completed,archived"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="name"/>
                            <field name="project_code"/>
                            <field name="project_type"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="budget"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                        <field name="is_approved_1" invisible="1"/>
                        <field name="is_approved_2" invisible="1"/>
                        <field name="is_approved_3" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- Progress bar -->
                    <div class="o_form_statusbar">
                        <field name="progress" widget="progressbar" options="{'max_value': 100}"/>
                    </div>
                    
                    <group>
                        <field name="owner_id"/>
                        <field name="contractor_id"/>
                        <field name="architect_id"/>
                        <field name="project_manager_id"/>
                    </group>
                    <!-- Improved Approval Section -->
                    <div class="oe_title" attrs="{'invisible': [('status', '=', 'archived')]}">
                        <h2>Approval Process</h2>
                    </div>

                    <div class="row mb16" attrs="{'invisible': [('status', '=', 'archived')]}">

                        <!-- First Approval Card -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <strong>First Approval</strong>
                                </div>
                                <div class="card-body">
                                    <field name="approval_1" class="mb8" placeholder="Select approver..." options="{'no_open': True}"/>
                                    <button name="action_approve_1" string="Approve" type="object"
                                            attrs="{'invisible': ['|', ('is_approved_1', '=', True), ('approval_1', '=', False)]}"
                                            class="btn btn-success mt8"/>
                                </div>
                            </div>
                        </div>

                        <!-- Second Approval Card -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <strong>Second Approval</strong>
                                </div>
                                <div class="card-body">
                                    <field name="approval_2" class="mb8" placeholder="Select approver..." options="{'no_open': True}"/>
                                    <button name="action_approve_2" string="Approve" type="object"
                                            attrs="{'invisible': ['|', ('is_approved_2', '=', True), '|', ('approval_2', '=', False), ('is_approved_1', '!=', True)]}"
                                            class="btn btn-success mt8"/>
                                </div>
                            </div>
                        </div>

                        <!-- Third Approval Card -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <strong>Third Approval</strong>
                                </div>
                                <div class="card-body">
                                    <field name="approval_3" class="mb8" placeholder="Select approver..." options="{'no_open': True}"/>
                                    <button name="action_approve_3" string="Approve" type="object"
                                            attrs="{'invisible': ['|', ('is_approved_3', '=', True), '|', ('approval_3', '=', False), ('is_approved_2', '!=', True)]}"
                                            class="btn btn-success mt8"/>
                                </div>
                            </div>
                        </div>

                    </div>

                    
                    <notebook>
                        <!-- Rest of your notebook pages remain unchanged -->
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="IFC / BCF / COBie">
                            <field name="ifc_model" filename="name"/>
                            <field name="bcf_file" filename="name"/>
                            <field name="cobie_file" filename="name"/>
                        </page>
                        <page string="Documents">
                            <field name="bim_document_id">
                                <tree>
                                    <field name="name"/>
                                    <field name="file_type"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Issues">
                            <field name="bim_issue_id">
                                <tree>
                                    <field name="name"/>
                                    <field name="status"/>
                                    <field name="priority"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Digital Twins">
                            <field name="bim_digital_twin_id">
                                <tree>
                                    <field name="name"/>
                                    <field name="status"/>
                                    <field name="last_updated"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View (Unchanged) -->
    <record id="view_bim_project_kanban" model="ir.ui.view">
        <field name="name">bim.project.kanban</field>
        <field name="model">bim.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_card">
                <field name="name"/>
                <field name="status"/>
                <field name="progress"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record #{record.status.raw_value}">
                            <div class="o_kanban_header">
                                <strong><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_body">
                                <div>Status: <field name="status"/></div>
                                <div>
                                    <field name="progress" widget="progressbar" options="{'max_value': 100}"/>
                                </div>
                                <div>Start: <field name="start_date"/></div>
                                <div>End: <field name="end_date"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action (Unchanged) -->
    <record id="action_bim_project" model="ir.actions.act_window">
        <field name="name">BIM Projects</field>
        <field name="res_model">bim.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first BIM project
            </p>
        </field>
    </record>

    <!-- Menu (Unchanged) -->
    <menuitem id="menu_bim_root" name="BIM Hub Odoo" sequence="10"/>
    <menuitem id="menu_bim_project" name="Projects" parent="menu_bim_root" sequence="1"/>
    <menuitem id="menu_bim_project_main"
              name="Manage Projects"
              parent="menu_bim_project"
              action="action_bim_project"
              sequence="1"/>

</odoo>