<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Enhanced Tree View with Status Colors -->
  <record id="view_bim_issue_tree" model="ir.ui.view">
    <field name="name">bim.issue.tree</field>
    <field name="model">bim.issue</field>
    <field name="arch" type="xml">
      <tree string="BIM Issues" decoration-danger="status == 'open'" decoration-success="status == 'closed'">
        <field name="name"/>
        <field name="model_id"/>
        <field name="issue_type"/>
        <field name="status" widget="badge" options="{'classes': {'open': 'danger', 'in_progress': 'warning', 'resolved': 'info', 'closed': 'success'}}"/>
        <field name="priority" widget="priority"/>
        <field name="assignee_id"/>
        <field name="due_date"/>
      </tree>
    </field>
  </record>

  <!-- Enhanced Form View with Workflow Buttons -->
  <record id="view_bim_issue_form" model="ir.ui.view">
    <field name="name">bim.issue.form</field>
    <field name="model">bim.issue</field>
    <field name="arch" type="xml">
      <form string="BIM Issue">
        <header>
          <button name="action_mark_in_progress" string="Start Work" 
                  type="object" class="btn-primary"
                  attrs="{'invisible': [('status', '!=', 'open')]}"/>
          <button name="action_mark_resolved" string="Mark Resolved" 
                  type="object" class="btn-success"
                  attrs="{'invisible': [('status', 'not in', ['open', 'in_progress'])]}"/>
          <button name="action_mark_closed" string="Close Issue" 
                  type="object" class="btn-secondary"
                  attrs="{'invisible': [('status', '!=', 'resolved')]}"/>
          <field name="status" widget="statusbar" 
                 clickable="1" 
                 options="{'clickable': ['open', 'in_progress', 'resolved', 'closed']}"/>
        </header>
        <sheet>
          <group>
            <field name="create_date" readonly="1"/>
            <field name="model_id" string="Project"/>
            <field name="issue_type"/>
            <field name="name"/>
            <field name="priority"/>
          </group>
          <group>
            <field name="reporter_id"/>
            <field name="assignee_id"/>
            <field name="due_date"/>
          </group>
          <group>
            <field name="digital_twin_id"/>
            <field name="location"/>
          </group>
          <notebook>
            <page string="Description">
              <field name="description"/>
            </page>
            <page string="Viewpoint &amp; BCF">
              <field name="viewpoint" filename="viewpoint_name" widget="image"/>
              <field name="bcf_file" filename="name"/>
            </page>
            <page string="Comments">
              <field name="comments">
                <tree>
                  <field name="author_id"/>
                  <field name="status"/>
                  <field name="create_date"/>
                </tree>
                <form>
                  <group>
                    <field name="author_id"/>
                    <field name="status"/>
                    <field name="comment"/>
                  </group>
                  <group>
                    <field name="viewpoint" filename="viewpoint_name" widget="image"/>
                  </group>
                </form>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Enhanced Kanban View with Workflow -->
  <record id="view_bim_issue_kanban" model="ir.ui.view">
    <field name="name">bim.issue.kanban</field>
    <field name="model">bim.issue</field>
    <field name="arch" type="xml">
      <kanban default_group_by="status">
        <field name="status"/>
        <field name="priority"/>
        <field name="assignee_id"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <div class="oe_kanban_content">
                <div t-att-class="'kanban_card_' + record.priority.raw_value">
                  <strong><field name="name"/></strong>
                  <div class="progress" style="height: 5px;">
                    <div t-att-class="'progress-bar bg-' + {'low': 'success', 'medium': 'warning', 'high': 'danger'}[record.priority.raw_value]" 
                         role="progressbar" 
                         t-att-style="'width: ' + (record.status.raw_value == 'closed' ? 100 : (record.status.raw_value == 'resolved' ? 75 : (record.status.raw_value == 'in_progress' ? 50 : 25))) + '%'"/>
                  </div>
                  <div class="mt-2">
                    <span class="badge" t-att-class="'bg-' + {'open': 'danger', 'in_progress': 'warning', 'resolved': 'info', 'closed': 'success'}[record.status.raw_value]">
                      <field name="status"/>
                    </span>
                    <span class="ms-2">
                      <field name="priority" widget="priority"/>
                    </span>
                  </div>
                  <div class="mt-2">
                    <i class="fa fa-user"/> 
                    <field name="assignee_id"/>
                  </div>
                  <div class="mt-2">
                    <i class="fa fa-calendar"/> 
                    <field name="due_date"/>
                  </div>
                </div>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Action to open the Issue views -->
  <record id="action_bim_issue" model="ir.actions.act_window">
    <field name="name">BIM Issues</field>
    <field name="res_model">bim.issue</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="context">{'default_status': 'open'}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create your first BIM issue
      </p>
    </field>
  </record>

  <!-- Menu Items -->
  <menuitem id="menu_bim_issue_root" name="Issues" parent="menu_bim_root" sequence="2"/>
  <menuitem id="menu_bim_issue" name="Manage Issues" parent="menu_bim_issue_root" action="action_bim_issue" sequence="1"/>

</odoo>