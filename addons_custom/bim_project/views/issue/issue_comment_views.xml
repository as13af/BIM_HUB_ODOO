<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Tree View for Issue Comments -->
  <record id="view_bim_issue_comment_tree" model="ir.ui.view">
    <field name="name">bim.issue.comment.tree</field>
    <field name="model">bim.issue.comment</field>
    <field name="arch" type="xml">
      <tree string="Issue Comments">
        <field name="author_id"/>
        <field name="status"/>
        <field name="create_date"/>
      </tree>
    </field>
  </record>

  <!-- Form View for Issue Comments -->
  <record id="view_bim_issue_comment_form" model="ir.ui.view">
    <field name="name">bim.issue.comment.form</field>
    <field name="model">bim.issue.comment</field>
    <field name="arch" type="xml">
      <form string="Issue Comment">
        <sheet>
          <group>
            <field name="issue_id"/>
            <field name="author_id"/>
            <field name="status"/>
          </group>
          <group>
            <field name="comment"/>
          </group>
          <group>
            <field name="viewpoint" filename="viewpoint_name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Kanban View for Issue Comments -->
  <record id="view_bim_issue_comment_kanban" model="ir.ui.view">
    <field name="name">bim.issue.comment.kanban</field>
    <field name="model">bim.issue.comment</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="author_id"/>
        <field name="status"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <div><strong><field name="author_id"/></strong> on <field name="create_date"/></div>
              <div>Status: <field name="status"/></div>
              <div><field name="comment"/></div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Action to open Issue Comment views -->
  <record id="action_bim_issue_comment" model="ir.actions.act_window">
    <field name="name">Issue Comments</field>
    <field name="res_model">bim.issue.comment</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add comments to BIM issues
      </p>
    </field>
  </record>

  <!-- Menu Items for Issue Comments -->
  <menuitem id="menu_bim_issue_comment_root" name="Comments" parent="menu_bim_issue_root" sequence="1"/>
  <menuitem id="menu_bim_issue_comment" name="Manage Comments" parent="menu_bim_issue_comment_root" action="action_bim_issue_comment" sequence="1"/>

</odoo>
