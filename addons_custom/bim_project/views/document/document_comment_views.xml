<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Tree View for Document Comments -->
  <record id="view_bim_document_comment_tree" model="ir.ui.view">
    <field name="name">bim.document.comment.tree</field>
    <field name="model">bim.document.comment</field>
    <field name="arch" type="xml">
      <tree string="Document Comments">
        <field name="author_id"/>
        <field name="status"/>
        <field name="create_date"/>
      </tree>
    </field>
  </record>

  <!-- Form View for Document Comments -->
  <record id="view_bim_document_comment_form" model="ir.ui.view">
    <field name="name">bim.document.comment.form</field>
    <field name="model">bim.document.comment</field>
    <field name="arch" type="xml">
      <form string="Document Comment">
        <sheet>
          <group>
            <field name="document_id"/>
            <field name="author_id"/>
            <field name="status"/>
          </group>
          <group>
            <field name="comment"/>
          </group>
          <group>
            <field name="attachment" filename="attachment_name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Kanban View for Document Comments -->
  <record id="view_bim_document_comment_kanban" model="ir.ui.view">
    <field name="name">bim.document.comment.kanban</field>
    <field name="model">bim.document.comment</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="author_id"/>
        <field name="status"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <strong><field name="author_id"/></strong> on <field name="create_date"/>
              <div>Status: <field name="status"/></div>
              <div><field name="comment"/></div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Action for Document Comments -->
  <record id="action_bim_document_comment" model="ir.actions.act_window">
    <field name="name">Document Comments</field>
    <field name="res_model">bim.document.comment</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add and manage comments on your BIM documents.
      </p>
    </field>
  </record>

  <!-- Menu Items for Document Comments -->
  <menuitem id="menu_bim_document_comment_root" name="Comments" parent="menu_bim_document_root" sequence="1"/>
  <menuitem id="menu_bim_document_comment" name="Manage Comments" parent="menu_bim_document_comment_root" action="action_bim_document_comment" sequence="1"/>

</odoo>
