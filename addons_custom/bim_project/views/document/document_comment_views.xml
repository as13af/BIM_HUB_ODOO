<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Tree View for Document Comments -->
  <record id="view_bim_document_comment_tree" model="ir.ui.view">
    <field name="name">bim.document.comment.tree</field>
    <field name="model">bim.document.comment</field>
    <field name="arch" type="xml">
      <tree string="Document Comments" editable="bottom">
        <field name="author_id"/>
        <field name="status" widget="statusbar"
               statusbar_visible="open,resolved,closed"/>
        <field name="create_date"/>
        <field name="comment" widget="mail_thread_message_short"/>
        <field name="attachment_name"/>
      </tree>
    </field>
  </record>

  <!-- Form View for Document Comments -->
  <record id="view_bim_document_comment_form" model="ir.ui.view">
    <field name="name">bim.document.comment.form</field>
    <field name="model">bim.document.comment</field>
    <field name="arch" type="xml">
      <form string="Document Comment">
        <header>
          <field name="status" widget="statusbar"
                 statusbar_visible="open,resolved,closed"/>
          <button name="write" type="object" string="Resolve"
                  attrs="{'invisible': [('status', '!=', 'open')]}"
                  class="btn-success"/>
          <button name="write" type="object" string="Reopen"
                  attrs="{'invisible': [('status', '=', 'open')]}"
                  class="btn-warning"/>
        </header>
        <sheet>
          <group>
            <field name="document_id" readonly="1"/>
            <field name="parent_comment_id"/>
            <field name="author_id" readonly="1"/>
            <field name="create_date" readonly="1"/>
          </group>
          <group>
            <field name="comment"/>
          </group>
          <group>
            <field name="attachment" filename="attachment_name"/>
            <field name="attachment_name"/>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <!-- Kanban View for Document Comments -->
  <record id="view_bim_document_comment_kanban" model="ir.ui.view">
    <field name="name">bim.document.comment.kanban</field>
    <field name="model">bim.document.comment</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_record">
        <field name="author_id"/>
        <field name="status"/>
        <field name="create_date"/>
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_global_click o_kanban_record #{record.status.raw_value}">
              <div class="o_kanban_primary_bottom">
                <strong><field name="author_id"/></strong>
                <span class="o_date"
                      title="Created On"><field name="create_date"/></span>
              </div>
              <div class="o_kanban_secondary_bottom">
                <div><field name="comment" widget="mail_thread_message_short"/></div>
                <div>Status: <field name="status"/></div>
                <div t-if="record.attachment_name.raw_value">
                  ðŸ“Ž <field name="attachment_name"/>
                </div>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Action for Document Comments -->
  <record id="action_bim_document_comment" model="ir.actions.act_window">
    <field name="name">Document Comments</field>
    <field name="res_model">bim.document.comment</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add and manage comments on your BIM documents.
      </p>
    </field>
  </record>

  <!-- Menu Items for Document Comments -->
  <menuitem id="menu_bim_document_root" name="Documents" parent="menu_bim_root" sequence="3"/>
  <menuitem id="menu_bim_document_comment_root" name="Comments"
            parent="menu_bim_document_root" sequence="1"/>
  <menuitem id="menu_bim_document_comment" name="Manage Comments"
            parent="menu_bim_document_comment_root"
            action="action_bim_document_comment" sequence="1"/>

</odoo>
