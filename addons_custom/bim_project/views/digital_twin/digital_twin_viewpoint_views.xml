<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Tree View for Viewpoint History -->
  <record id="view_digital_twin_viewpoint_tree" model="ir.ui.view">
    <field name="name">bim.digital.twin.viewpoint.tree</field>
    <field name="model">bim.digital.twin.viewpoint</field>
    <field name="arch" type="xml">
      <tree string="Viewpoint History" default_order="captured_on desc">
        <field name="twin_id"/>
        <field name="captured_on"/>
        <field name="image" widget="image" options="{'size': [60, 60]}"/>
      </tree>
    </field>
  </record>

  <!-- Form View for Viewpoint History -->
  <record id="view_digital_twin_viewpoint_form" model="ir.ui.view">
    <field name="name">bim.digital.twin.viewpoint.form</field>
    <field name="model">bim.digital.twin.viewpoint</field>
    <field name="arch" type="xml">
      <form string="Viewpoint Snapshot">
        <sheet>
          <group>
            <field name="twin_id" readonly="1"/>
            <field name="captured_on" readonly="1"/>
          </group>
          <group>
            <field name="image" widget="image" options="{'size': [400, 300]}"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action & Menu for Viewpoint History -->
  <record id="action_digital_twin_viewpoint" model="ir.actions.act_window">
    <field name="name">Viewpoint History</field>
    <field name="res_model">bim.digital.twin.viewpoint</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_bim_digital_twin_viewpoint_root" name="Viewpoint History"
            parent="menu_bim_digital_twin_root" sequence="2"/>
  <menuitem id="menu_bim_digital_twin_viewpoint" name="Manage Viewpoints"
            parent="menu_bim_digital_twin_viewpoint_root"
            action="action_digital_twin_viewpoint" sequence="1"/>

</odoo>
