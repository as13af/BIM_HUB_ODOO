<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.js_template" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">Custom BIM Dashboard</h1>
                                    <div>
                                        <select class="form-select" t-on-change="onFilterChange">
                                            <option value="0">Select Period</option>
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 30 Days</option>
                                            <option value="90">Last 90 Days</option>
                                            <option value="365">Last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <KpiCard name="'Active Projects'" value="state.metrics.projectCount" percentage="6"/>
                        <KpiCard name="'Open Issues'" value="state.metrics.openIssues" percentage="20"/>
                        <KpiCard name="'Pending Documents'" value="state.metrics.pendingDocs" percentage="-3"/>
                        <KpiCard name="'Approved Documents'" value="state.metrics.approvedDocs" percentage="-10"/>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Issue Status Distribution</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'doughnut'" title="'Issue Status Distribution'" data="state.metrics.issueChart"/>
                            </div>
                        </div>
                        <!-- Add more chart components as needed -->
                    </div>
                </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Project Type Distribution</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'pie'" title="'Project Type Distribution'" data="state.metrics.projectTypeChart"/>
                            </div>
                        </div>
                    </div>
                <!-- Add more columns or rows as needed -->
            </div>
        </div>
    </t>
</templates>
